# Database connection string for Prisma ORM
DATABASE_URL="postgresql://sovrane:sovrane@localhost:5432/sovrane"

# Minimum log level for the application logger
LOG_LEVEL=info

# Secret key used to sign JWT tokens
JWT_SECRET=secret

# Access token expiration (e.g. 15m, 1h)
JWT_ACCESS_TOKEN_DURATION=15m

# Refresh token expiration (e.g. 7d)
JWT_REFRESH_TOKEN_DURATION=7d

# Default site created during initialization
MAIN_SITE_NAME=Main Site

# Default department created during initialization
MAIN_DEPARTMENT_NAME=Main Department

# Credentials for the default admin account
ADMIN_EMAIL=admin@admin.com
ADMIN_PASSWORD=rootadmin

# Enable locking user accounts after login failures
LOCK_ACCOUNT_ON_LOGIN_FAIL=true

# Account lock duration in seconds
ACCOUNT_LOCK_DURATION=900

# Path for storing uploaded documents
STORAGE_PATH=./uploads

# Redis cache configuration
# If REDIS_HOST is empty, an in-memory cache is used instead
REDIS_HOST=
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# Port the HTTP server listens on
PORT=3000
