datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  firstname  String
  lastname   String
  email      String   @unique
  password   String
  status     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  roles      UserRole[]
}

model Role {
  id    String @id @default(uuid())
  label String
  users UserRole[]
}

model UserRole {
  user   User @relation(fields: [userId], references: [id])
  userId String
  role   Role @relation(fields: [roleId], references: [id])
  roleId String

  @@id([userId, roleId])
}