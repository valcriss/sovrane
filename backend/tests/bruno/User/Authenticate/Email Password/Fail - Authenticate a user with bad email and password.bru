meta {
  name: Fail : Authenticate a user with bad email and password
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/auth/login
  body: json
  auth: none
}

body:json {
  {
    "email": "bad@admin.com",
    "password": "rootadmin"
  }
}

tests {
  test("should be Unauthorized (401)", function () {
    expect(res.getStatus()).to.equal(401);
  });
  
  test("should be fast < 100ms", function () {
    expect(res.getResponseTime()).to.be.at.most(100);
  });
  
  test("should have a readable error", function () {
    expect(res.getBody().error).to.eql("Invalid credentials");
  });
}
