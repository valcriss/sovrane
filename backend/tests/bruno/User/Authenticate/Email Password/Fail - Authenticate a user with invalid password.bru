meta {
  name: Fail : Authenticate a user with invalid password
  type: http
  seq: 7
}

post {
  url: {{baseUrl}}/auth/login
  body: json
  auth: none
}

body:json {
  {
    "email": "bad@admin.com",
    "password": "admin"
  }
}

tests {
  test("should be Unprocessable Entity (422)", function () {
    expect(res.getStatus()).to.equal(422);
  });
  
  test("should be fast < 100ms", function () {
    expect(res.getResponseTime()).to.be.at.most(100);
  });
  
  test("should have a readable error", function () {
    expect(res.getBody().error).to.eql("Invalid parameters value : password");
  });
}
