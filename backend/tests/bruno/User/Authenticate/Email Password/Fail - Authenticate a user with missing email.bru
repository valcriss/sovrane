meta {
  name: Fail : Authenticate a user with missing email
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/auth/login
  body: json
  auth: none
}

body:json {
  {
    "password":"admin"
  }
}

tests {
  test("should be Bad Request (400)", function () {
    expect(res.getStatus()).to.equal(400);
  });
  
  test("should be fast < 100ms", function () {
    expect(res.getResponseTime()).to.be.at.most(100);
  });
  
  test("should have a readable error", function () {
    expect(res.getBody().error).to.eql("Missing required parameters: email");
  });
}
